
@page "{id:guid?}"
@model uxcomex.Presentation.Pages.Clients.CreateModel


<h2>@(Model.IsEdit ? "Editar Cliente" : "Criar Novo Cliente")</h2>



<div class="row">
    <div class="col-md-6">
        <form method="post">
            @Html.AntiForgeryToken()
            @if (Model.IsEdit)
            {
                <input type="hidden" asp-for="Cliente.cli_id" />
            }

            <div class="mb-3">
                <label asp-for="Cliente.cli_nome" class="form-label">Nome *</label>
                <input asp-for="Cliente.cli_nome" class="form-control" placeholder="Digite o nome do cliente" />
                <span asp-validation-for="Cliente.cli_nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cliente.cli_email" class="form-label">Email *</label>
                <input asp-for="Cliente.cli_email" type="email" class="form-control" placeholder="Digite o email do cliente" />
                <span asp-validation-for="Cliente.cli_email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cliente.cli_telefone" class="form-label">Telefone</label>
                <input asp-for="Cliente.cli_telefone" class="form-control" placeholder="Digite o telefone do cliente" />
                <span asp-validation-for="Cliente.cli_telefone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i> @(Model.IsEdit ? "Atualizar Cliente" : "Salvar Cliente")
                </button>
                <a class="btn btn-secondary" href="/Clientes">
                    <i class="fa fa-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger mt-3">
        <h6>Corrija os seguintes erros:</h6>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

